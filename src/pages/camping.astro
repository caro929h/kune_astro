---
import Layouts from "../layouts/Layouts.astro";
import Menu from "../components/Menu.astro";
import "../styles/global.css";

import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>

  <Menu />

  <div class="spacer"></div>
  <body>
    <img src="/img/blue.webp" alt="" />

    <div class="gap">
      <h1>GET YOUR TICKET</h1>
      <div class="ticket">
        <img src="/img/camping/ticket_full.webp" alt="" />
        <img src="/img/camping/ticket_three.webp" alt="" />
        <img src="/img/camping/ticket_one.webp" alt="" />
      </div>
      <br />
      <br />
      <br />
      <div>
        <p class="knap">BUY TICKET HERE</p>
      </div>

      <br />
      <br />
      <br />
      <br />

      <h1>CHOOSE YOUR CAMPING SPOT</h1>
      <div class="ticket">
        <img src="/img/camping/camping_tent.webp" alt="" />
        <img src="/img/camping/camping_boat.webp" alt="" />
        <img src="/img/camping/camping_indoor.webp" alt="" />
      </div>

      <br />
      <br />
      <br />

      <div>
        <p class="knap">BUY CAMPING HERE</p>
      </div>
    </div>

    <Footer />

    <style>
      .gap {
        padding: 30px;
        margin: 30px;
        display: block;
        align-content: center;
      }

      .ticket {
        display: flex;
        justify-content: space-between;
        gap: 100px;
      }

      h1,
      h2,
      h3 {
        margin-bottom: 20px;
        padding-bottom: 20px;
        margin-top: 40px;
        padding-top: 40px;
        color: #97dff4;
        font-family: "Montserrat";
      }

      .knap {
        padding: 18px 32px;
        background-color: #97dff4;
        color: black;
        display: inline-block;
        margin-top: 20px;
        border-radius: 50px;
        font-family: "Montserrat";
      }

      @media (max-width: 700px) {
        .ticket {
          display: grid;
          grid-template-columns: 1fr;
          width: 60%;
        }
      }
    </style>
  </body>

</html>
