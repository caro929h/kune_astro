---
import Menu from "./Menu.astro";
---

<header>
  <div class="logo">
    <a href="../pages/index.astro"> <img class="logo_img" src="src/img/kune_logo.png" alt="" /></a>
  </div>
  <div>
    <h1>KUNE</h1>
    <h1>FESTIVAL</h1>
    <h2>JULY 19-23</h2>
  </div>
  <div class="main-menu">
    <Menu />
  </div>
</header>

<style>
  header {
    align-items: right;
    padding-right: 2rem;
  }

  a {
    display: block;
    padding-block: 20px;
  }

  .logo_img {
    width: 120px;
  }

  .logo {
    position: absolute;
    left: 20px;
  }

  header {
    grid-column: 1fr 1fr 1fr;
  }
</style>
